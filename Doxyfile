WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES

#---------------------------------------------
#  Вхідні файли / каталоги
#---------------------------------------------

# Звідки брати вихідні файли
# Можеш підправити шляхи під свою структуру (наприклад src/, include/, tests/)
INPUT                  = ./graph.h \
                         ./graph.cpp \
                         ./main.cpp \
                         .

# Маски файлів, які обробляти
FILE_PATTERNS          = *.h \
                         *.hpp \
                         *.c \
                         *.cpp

# Чи ходити рекурсивно по підкаталогах
RECURSIVE              = YES

# Кодування вихідних файлів
INPUT_ENCODING         = UTF-8

#---------------------------------------------
#  Вихід HTML
