# Документувати приватні члени (можна поставити NO, якщо не потрібно)
EXTRACT_PRIVATE        = NO

# Документувати протектед-члени
EXTRACT_PROTECTED      = YES

# Документувати статичні члени
EXTRACT_STATIC         = YES

# Документувати всі файли, навіть без коментарів
